/* pages/profile/profile.wxss */
/* 主色调 */
:root {
  --primary-color: #4CAF50;       /* 主绿色 */
  --light-green: #E8F5E9;         /* 浅绿色背景 */
  --medium-green: #A5D6A7;        /* 中等绿色 */
  --dark-green: #388E3C;          /* 深绿色 */
  --text-color: #333;             /* 主要文字颜色 */
  --secondary-text: #757575;      /* 次要文字颜色 */
}

.container {
  padding: 20rpx 30rpx;
  background-color:rgb(196, 223, 171);
  min-height: 100vh;
}


.avatar-section {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 30rpx 0;
  border-bottom: 1rpx solid #eee;
}

.avatar-wrapper {
  position: relative;
  width: 120rpx;
  height: 120rpx;
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  border: 2rpx solid var(--medium-green);
}

.edit-icon {
  position: absolute;
  right: 0;
  bottom: 0;
  background: var(--primary-color);
  color: white;
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 24rpx;
}

/* 表单区域 */
.form-section {
  background: #f5f9f5;
  border-radius: 16rpx;
  padding: 0 30rpx;
  margin: 30rpx 0;
  box-shadow: 0 4rpx 12rpx rgba(76, 175, 80, 0.1);
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--text-color);
  padding: 30rpx 0;
  display: block;
  border-bottom: 1rpx solid #f5f5f5;
}

.form-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 30rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
}

.form-item:last-child {
  border-bottom: none;
}

.label {
  font-size: 30rpx;
  color: var(--text-color);
  width: 160rpx;
}

.input, .picker {
  flex: 1;
  text-align: right;
  font-size: 30rpx;
  color: var(--secondary-text);
  padding: 10rpx 0;
}

.textarea {
  width: 100%;
  height: 200rpx;
  padding: 20rpx 0;
  font-size: 30rpx;
  color: var(--text-color);
  line-height: 1.6;
}

.placeholder {
  color: #bbb;
}

/* 提交按钮 */
.submit-btn {
  background:#f5f9f5;
  color: rgb(26, 25, 25);
  border-radius: 50rpx;
  margin: 60rpx auto;
  width: 80%;
  font-size: 34rpx;
  font-weight: 500;
}

.submit-btn:active {
  background: var(--dark-green);
}

.avatar-position {
  position: relative;
  left: 262rpx;
  top: -29rpx;
}