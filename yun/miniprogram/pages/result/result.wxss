/* 基础容器 */
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 40rpx 30rpx;
  min-height: 100vh;
  background: linear-gradient(to bottom, #f5f7fa, rgb(196, 223, 171));
}

/* 头部标题 */
.header {
  margin-bottom: 60rpx;
  text-align: center;
}
.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  text-shadow: 0 2rpx 4rpx rgba(0,0,0,0.1);
}

/* 分数圆环 - 核心样式 */
.score-ring {
  position: relative;
  width: 280rpx;
  height: 280rpx;
  border-radius: 50%;
  /* 关键修复：使用 var() 调用变量 */
  background: conic-gradient(
    transparent 0deg,
    var(--ring-color) var(--progress),
    transparent var(--progress)
  );
  display: flex;
  justify-content: center;
  align-items: center;
  box-shadow: 0 8rpx 25rpx rgba(0,0,0,0.1);
}
.inner-circle {
  width: 220rpx;
  height: 220rpx;
  background: white;
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  box-shadow: inset 0 4rpx 10rpx rgba(0,0,0,0.05);
}
.score {
  font-size: 64rpx;
  font-weight: bold;
  color: #333;
}

/* 结果内容区 */
.result-content {
  margin-top: 60rpx;
  width: 100%;
  max-width: 600rpx;
  padding: 30rpx;
  background: white;
  border-radius: 20rpx;
  box-shadow: 0 6rpx 20rpx rgba(0,0,0,0.08);
}
.result-desc {
  font-size: 32rpx;
  line-height: 1.6;
  color: #444;
  text-align: center;
  margin-bottom: 40rpx;
  font-weight: 500;
}

/* 建议列表 */
.advice-section {
  border-top: 1rpx solid #eee;
  padding-top: 30rpx;
}
.advice-title {
  display: block;
  font-size: 28rpx;
  color: #666;
  margin-bottom: 20rpx;
  font-weight: 500;
}
.advice-list {
  display: flex;
  flex-direction: column;
  gap: 15rpx;
}
.advice-item {
  position: relative;
  padding-left: 30rpx;
  font-size: 28rpx;
  color: #555;
  line-height: 1.5;
}
.advice-item::before {
  content: "•";
  position: absolute;
  left: 0;
  color: #4a90e2;
  font-size: 32rpx;
  top: -2rpx;
}
/* WXSS */
.score-ring {
  background: conic-gradient(transparent 0deg, var(--ring-color) var(--progress), transparent var(--progress));
}
/* 预定义颜色类名 */
.excellent { --ring-color: #4CAF50; } /* 绿色 */
.good { --ring-color: #FFC107; }     /* 黄色 */
.poor { --ring-color: #F44336; }      /* 红色 */

.ToTestList-btn {
  background:#f5f9f5;
  color: rgb(26, 25, 25);
  border-radius: 50rpx;
  margin: 60rpx auto;
  width: 80%;
  font-size: 34rpx;
  font-weight: 500;
}