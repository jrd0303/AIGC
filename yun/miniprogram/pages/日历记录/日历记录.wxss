/* pages/日历记录/日历记录.wxss */
page {
  background-color: #f5f5f5;
}
.container {
  padding: 20px;
}
.input-wrapper {
  position: relative;
  z-index: 2;
}
.transparent-input {
  width: 100%;
  height: auto;
  background-color: transparent !important;
  border: none !important;
  font-size: 16px;
  line-height: 1.5;
  color: #333;
  padding: 8px 0;
  min-height: 80px;
}

.char-counter {
  position: absolute;
  bottom: 0;
  left: 0;
  font-size: 12px;
  color: #999;
  transform: translateY(100%);
  margin-bottom: 5px;
}

.transparent-input:focus {
  outline: none;
}
page {
  font-size: 0;
}

.page-bg {
  background-color: rgb(196, 223, 171);
  position: relative;
  width: 100vw;
  height: 100vh;
  overflow: hidden;
}

.image-container {
  position: absolute;
  top: 40rpx;
  left: 40rpx;
  right: 40rpx;
  bottom: 40rpx;
  overflow: hidden;
  z-index: 1;
}

.bg {
  width: 100%;
  height: 100%;
  object-fit: contain;
}
.enter-btn {
  bottom: calc(160rpx + env(safe-area-inset-bottom, 0));
  left: 50%;
  transform: translateX(-50%);
  width: 280rpx;
  height: 80rpx;
  background: #4CAF50;
  color: white;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  border-radius: 40rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.2);
  z-index: 20;
  cursor: pointer;
  font-weight: bold;
  letter-spacing: 2rpx;
  transition: all 0.3s ease;
}
.btn-icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 12rpx;
}
.btn-text {
  flex: 1;
  text-align: center;
}
