/* pages/testResults/testResults.wxss */
.container {
padding-bottom: 65.38rpx;
  background-color: #c4dfab;
  width: 100%;
  overflow-y: auto;
  overflow-x: hidden;
  height: 100%;
}

.header {
  text-align: center;
  padding: 40rpx 0;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #2c3e50;
}

.result-list {
  height: calc(100vh - 180rpx);
}

.result-item {
  background: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.item-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.test-name {
  font-size: 32rpx;
  font-weight: 600;
  color: #3498db;
}

.test-date {
  font-size: 26rpx;
  color: #95a5a6;
}

.item-content {
  margin-bottom: 20rpx;
}

.result-label {
  font-size: 28rpx;
  color: #7f8c8d;
  margin-right: 10rpx;
}

.result-value {
  font-size: 30rpx;
  font-weight: 500;
  color: #2c3e50;
}

.item-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-top: 1rpx solid #eee;
  padding-top: 20rpx;
}

.score {
  font-size: 28rpx;
  color: #e74c3c;
}

.detail-link {
  font-size: 28rpx;
  color: #3498db;
}

/* 空状态样式（纯文字版） */
.empty-container {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 300rpx;
  padding: 40rpx;
}

.empty-text {
  font-size: 32rpx;
  color: #999;
  text-align: center;
}